.task-list{
  width: 95%;
  margin: 0 auto;
}
.task-list-item{
  width: 100%;
  height: 360rpx;
  position: relative;
  box-sizing: border-box;
  background: #ffffff;
  margin-top: 10px;
  border-radius: 3px;
  padding: 5px 0;
  box-shadow: 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12);
}
.header-wrap,.content-wrap,.footer-wrap{
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  flex-wrap: nowrap;
  box-sizing: border-box;
  padding: 0 15px;
}
.header-wrap{
  height: 35px;
  line-height: 35px;
  color: #455A64;
  border-bottom: 1px solid #eee;
}
.content-wrap{
  height:135px;
  box-sizing: border-box;
  padding: 10px 6px 0;
  color: #37474F;
  line-height: 25px;
}
.content{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  padding: 0 15px;
}
.date{
  font-size: 13px;
 opacity: .5
}
.wx-checkbox-input{
    display: none;
}
label{
  display: flex;
  align-items: center;
  font-size: 13px;
  color: #000;
}
.ws-checkbox {
  display: inline-block;
  width: 20px;
  height: 20px;
  background-image: url(data:image/png;base64,);
  background-size: 100%;
  margin-right: 5px;
}

.ws-checkbox[checked] {
  background-image: url(data:image/png;base64,);
}