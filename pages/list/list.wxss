.task-list{
  width: 95%;
  margin: 0 auto;
}
.task-list-item{
  width: 100%;
  height: 320rpx;
  position: relative;
  display: block;
  padding: 0 130rpx 0 30rpx;
  line-height: 120rpx;
  box-sizing: border-box;
  background: #ffffff;
  margin-top: 10px;
  box-shadow: 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12);
}
.task-list-item::after{
  content: "";
  position: absolute;
  height: 1px;
  width: 200%;
  transform: scale(0.5);
  background: #CFD8DC;
  bottom: 0;
  left: -50%;
  box-sizing: border-box;
}
.task-label{
  width: 100%;
  height: 100%;
  display: block;
}
.task-checkbox,.msg-left{
  height: 100%;
  float: left;
  color: #546E7A;
  font-size: 14px;
}
.msg-left{
  padding: 30rpx 0 15rpx  0;
  box-sizing: border-box;
}
.task-title,.task-type{
    display: block;
    line-height:30rpx;
    height: 30rpx;
}
.task-type{
     margin-top:10rpx;  
}
.msg-right{
  float: right;
  color: #546E7A;
  font-size: 12px; 
}
.corn{
  position: absolute;
  color: #9E9E9E;
  font-size: 40px;
  right: 20px;
  top: 0;
  font-weight: 100;
}