.task-list{
  width: 100%;
}
.task-list-item{
  width: 100%;
  height: 120rpx;
  position: relative;
  display: block;
  padding: 0 20rpx;
  line-height: 120rpx;
  box-sizing: border-box;
}
.task-list-item::after{
  content: "";
  position: absolute;
  height: 1px;
  width: 200%;
  transform: scale(0.5);
  background: #CFD8DC;
  bottom: 0;
  left: -50%;
  box-sizing: border-box;
}
.task-label{
  width: 100%;
  height: 100%;
  display: block;
}
.task-checkbox,.msg-left{
  height: 100%;
  float: left;
  color: #546E7A;
  font-size: 14px;
}
.msg-left{
  padding: 30rpx 0 15rpx  30rpx;
  box-sizing: border-box;
}
.task-title,.task-type{
    display: block;
    line-height:30rpx;
    height: 30rpx;
}
.task-type{
     margin-top:10rpx;  
}
.msg-right{
  float: right;
  color: #546E7A;
  font-size: 12px; 
}